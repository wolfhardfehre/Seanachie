<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycler_pet_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/card_corners"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/text_outer_padding">

        <ImageView
            android:id="@+id/recycler_pet_item_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_pets_black_48dp"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:paddingStart="@dimen/standard_padding"
            android:paddingEnd="@dimen/standard_padding"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/recycler_pet_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/text_divider_padding"
                android:text="@string/recycler_forms_heading"
                android:textColor="@color/grey_dark"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:id="@+id/recycler_pet_item_first_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recycler_forms_content"
                android:textColor="@color/grey_pinkish"
                android:textSize="@dimen/text_hint_size" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>